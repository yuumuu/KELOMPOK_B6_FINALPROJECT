<%- include('partials/header', { title: 'Register', db_status: db_status }) %>

<div class="flex flex-col items-center justify-center pt-10 px-4">
    <div class="w-full max-w-sm">
        <h2 class="text-2xl font-bold text-white mb-6 text-center">Create an account</h2>
        
        <% if (error) { %>
            <div class="bg-red-500/10 border border-red-500/50 text-red-500 p-3 rounded-xl mb-4 text-sm text-center">
                <%= error %>
            </div>
        <% } %>

        <form action="/register" method="POST" class="space-y-4">
            <div>
                <input type="text" name="name" placeholder="Full Name" required 
                    class="w-full bg-neutral-900 border border-neutral-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-white transition placeholder-neutral-500">
            </div>
            <div>
                <input type="text" name="username" placeholder="Username" required 
                    class="w-full bg-neutral-900 border border-neutral-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-white transition placeholder-neutral-500">
            </div>
            <div>
                <input type="password" name="password" placeholder="Password" required 
                    class="w-full bg-neutral-900 border border-neutral-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-white transition placeholder-neutral-500">
            </div>
            <button type="submit" class="w-full bg-white text-black font-bold py-3 rounded-xl hover:bg-neutral-200 transition">
                Register
            </button>
        </form>

        <p class="text-neutral-500 text-sm text-center mt-6">
            Already have an account? <a href="/login" class="text-white hover:underline">Login</a>
        </p>
    </div>
</div>

<%- include('partials/footer') %>